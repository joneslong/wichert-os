{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WichertOS",
  "version": "0.6.1",
  "identifier": "de.wichert.os",

  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "title": "Wichert OS",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  }

  
}
